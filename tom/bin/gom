#! /bin/sh

# This file is generated from utils/script.in by tom's build script
# Keywords for substitutions:
# @_TOM_HOME@ allow to specify the variable to be used as TOM_HOME (usefull for
#   STABLE v.s. SRC)
# @_MAIN_CLASS@ specify the class containing the main()
# @_CONFIG_FILE@ specify the config file to use, relative to TOM_HOME
# @_INCLUDES_DIR@ specify the path for includes (-I option), relative to TOM_HOME

SCRIPT_ARGS=
JAVA_ARGS=
while [ $# -gt 0 ]; do
  case $1 in
    -D*)
      JAVA_ARGS=$JAVA_ARGS" "$1
      ;;
    *)
      SCRIPT_ARGS=$SCRIPT_ARGS" "$1
      ;;
  esac
  shift
done

# OS specific support.  $var _must_ be set to either true or false.
cygwin=false;
darwin=false;
case "`uname`" in
  CYGWIN*) cygwin=true ;;
  Darwin*) darwin=true ;;
esac

if [ -z "$TOM_HOME" -o ! -d "$TOM_HOME" ]
then
  ## resolve links - $0 may be a link to tom's home
  PRG="$0"
  progname=`basename "$0"`

  # need this for relative symlinks
  while [ -h "$PRG" ] ; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
    PRG="$link"
    else
    PRG=`dirname "$PRG"`"/$link"
    fi
  done

  TOM_HOME=`dirname "$PRG"`/..

  # make it fully qualified
  TOM_HOME=`cd "$TOM_HOME" && pwd`
fi

# For Cygwin, ensure paths are in UNIX format before anything is touched
if $cygwin
then
  [ -n "$TOM_HOME" ] &&
    TOM_HOME=`cygpath --unix "$TOM_HOME"`
fi

# set TOM_LIB location
TOM_LIB="${TOM_HOME}/lib"
EMF_LIB="${TOM_LIB}/tools/org.eclipse.emf.common_2.5.0.v200906151043.jar:${TOM_LIB}/tools/org.eclipse.emf.ecore_2.5.0.v200906151043.jar:${TOM_LIB}/tools/org.eclipse.emf.ecore.xmi_2.5.0.v200906151043.jar"

TOM_JAR="${TOM_LIB}/tom-compiler-full.jar:${TOM_LIB}/tom-runtime-full.jar:${EMF_LIB}"
JAVACMD=java$JAVA_ARGS

if [ -z "$LOCALCLASSPATH" ]
then
  LOCALCLASSPATH=$TOM_JAR
else
  LOCALCLASSPATH=$TOM_JAR:$LOCALCLASSPATH
fi

SCRIPT_INC="${TOM_HOME}/share/gom"
SCRIPT_CONFIG_FILE="${TOM_HOME}/Gom.xml"

# For Cygwin, switch paths to Windows format before running java
if $cygwin
then
  TOM_HOME=`cygpath --windows "$TOM_HOME"`
  SCRIPT_INC=`cygpath --windows "$SCRIPT_INC"`
  LOCALCLASSPATH=`cygpath --path --windows "$LOCALCLASSPATH"`
  SCRIPT_CONFIG_FILE=`cygpath --windows "$SCRIPT_CONFIG_FILE"`
fi

exec $JAVACMD -cp "$LOCALCLASSPATH" -Dtom.home="$TOM_HOME" tom.gom.Gom -I "$SCRIPT_INC" -X "$SCRIPT_CONFIG_FILE" $SCRIPT_ARGS
